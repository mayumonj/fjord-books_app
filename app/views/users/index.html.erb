<h1><%= User.model_name.human %></h1>
<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:name) %></th>
      <th><%= User.human_attribute_name(:self_introduction) %></th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% if !@users.nil? %>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.self_introduction %></td>
          <td><%= link_to t('views.common.show'), user %></td>
        </tr>
      <% end %>
    <% else %>
      no user
    <% end %>
  </tbody>
</table>

<%= paginate @users %>
