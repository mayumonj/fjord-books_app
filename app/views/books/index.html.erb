<p id="notice"><%= notice %></p>

<h1><%= t('.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t 'books.columns.title' %></th>
      <th><%= t 'books.columns.memo' %></th>
      <th><%= t 'books.columns.author' %></th>
      <th><%= t 'books.columns.picture' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('books.actions.show'), book %></td>
        <td><%= link_to t('books.actions.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('books.actions.destroy'), book, method: :delete, data: { confirm: t('books.messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new'), new_book_path %>
