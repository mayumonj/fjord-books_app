<h1><%= Report.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th><%= Report.human_attribute_name(:title) %></th>
      <th><%= Report.human_attribute_name(:created_at) %></th>
      <th><%= User.model_name.human %></th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= l(report.created_at.in_time_zone('Tokyo'), format: :default) %></td>
        <td>
          <% unless report.user.name.empty? %>
            <%= report.user.name %>
          <% else %>
            <%= report.user.email %>
          <% end %>
        </td>
        <td><%= link_to t('views.common.show'), report %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @reports %>

<br>

<%= link_to t('views.common.new'), new_report_path %>
